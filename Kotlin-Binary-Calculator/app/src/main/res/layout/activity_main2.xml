<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txt_disp"
        android:layout_width="345dp"
        android:layout_height="165dp"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="334dp"
        android:layout_height="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/aqua"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:text="Real Number Convertor"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_columnSpan="@integer/material_motion_duration_long_2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_eql"
            android:layout_width="182dp"
            android:layout_height="61dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnSpan="@integer/material_motion_duration_long_2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_no0"
            android:layout_width="151dp"
            android:layout_height="171dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="40dp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_no1"
            android:layout_width="151dp"
            android:layout_height="171dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textSize="40dp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_cls"
            android:layout_width="108dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_height="wrap_content"
            android:text="C"
            android:backgroundTint="@color/lime"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="108dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textSize="20dp"
            android:backgroundTint="@color/lime"
            app:layout_column="1"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>